<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4C3F8"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/first_line"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:background="@drawable/white_line"
            android:layout_centerHorizontal="true"/>

        <View
            android:id="@+id/second_line"
            android:layout_width="20dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/red_line"
            android:layout_toEndOf="@+id/first_line"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/first_line" />

        <View
            android:id="@+id/third_line"
            android:layout_width="20dp"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/purple_line"
            android:layout_toEndOf="@+id/second_line"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/second_line" />

        <View
            android:id="@+id/fourth_line"
            android:layout_width="20dp"
            android:layout_height="200dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/green_line"
            android:layout_toEndOf="@+id/third_line"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/third_line" />

        <View
            android:id="@+id/fifth_line"
            android:layout_width="20dp"
            android:layout_height="230dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/red_line"
            android:layout_toEndOf="@+id/fourth_line"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/fourth_line" />

        <View
            android:id="@+id/sixth_line"
            android:layout_width="20dp"
            android:layout_height="130dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/purple_line"
            android:layout_toEndOf="@+id/fifth_line"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/fifth_line" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="348dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="296dp"
            android:layout_marginLeft="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/car_parking_2"
            android:transitionName="image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/TODO" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="bottom">

            <TextView
                android:id="@+id/tag"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="46dp"
                android:layout_marginBottom="1dp"
                android:fontFamily="@font/berkshire_swash"
                android:text="Smart Car parking"
                android:textColor="#07115E"
                android:textSize="40sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="46dp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>